---
const images = [
  "/images/image.png",
  "/images/image2.jpeg",
  "/images/image3.jpeg",
  "/images/image4.jpeg",
  "/images/image5.jpeg"
];

const videoUrl = "/videos/demo.mp4"; // Make sure this matches your file location
---

<style>
  .gallery {
    display: flex;
    flex-direction: column; /* Ensures images and video are stacked */
    gap: 20px;
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .image-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
  }

  .image-grid img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 15px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out;
  }

  .image-grid img:hover {
    transform: scale(1.05);
  }

  .video-container {
    display: flex;
    justify-content: center; /* Centers the video */
  }

  .video-container video {
    width: 100%;
    max-width: 800px; /* Limits the video width */
    border-radius: 15px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
  }
</style>

<section class="gallery" id="GalerÃ­a">
  <!-- Images Grid -->
  <div class="image-grid">
    {images.map((src, index) => (
      <img src={src} alt={`Imagen ${index + 1}`} loading="lazy" />
    ))}
  </div>

  <!-- Video Below Images -->
  <div class="video-container">
    <video controls>
      <source src={videoUrl} type="video/mp4" />
      Your browser does not support the video tag.
    </video>
  </div>
</section>
